[MAIN]

ignored-modules=openmm.unit
ignore=_version.py
extension-pkg-whitelist=openmm.app.internal.compiled,openmm._openmm

[DESIGN]

max-locals=20  # Maximum number of local variables for function/method body

[BASIC]

method-naming-style=camelCase
argument-naming-style=camelCase
disable=too-many-arguments,duplicate-code

[FORMAT]
good-names=i,j,k,_,x,y,z
